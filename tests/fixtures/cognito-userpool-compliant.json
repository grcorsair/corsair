{
  "UserPool": {
    "Id": "us-west-2_COMPLIANT001",
    "Name": "production-compliant-pool",
    "Policies": {
      "PasswordPolicy": {
        "MinimumLength": 14,
        "RequireUppercase": true,
        "RequireLowercase": true,
        "RequireNumbers": true,
        "RequireSymbols": true,
        "TemporaryPasswordValidityDays": 1
      }
    },
    "MfaConfiguration": "ON",
    "UserPoolTags": {
      "Environment": "production",
      "Compliance": "SOC2",
      "Owner": "security-team"
    },
    "AdminCreateUserConfig": {
      "AllowAdminCreateUserOnly": false,
      "InviteMessageTemplate": {
        "SMSMessage": "Your username is {username} and temporary password is {####}",
        "EmailMessage": "Your username is {username} and temporary password is {####}",
        "EmailSubject": "Your temporary password"
      },
      "UnusedAccountValidityDays": 7
    },
    "DeviceConfiguration": {
      "ChallengeRequiredOnNewDevice": true,
      "DeviceOnlyRememberedOnUserPrompt": true
    },
    "AccountRecoverySetting": {
      "RecoveryMechanisms": [
        {
          "Priority": 1,
          "Name": "verified_email"
        },
        {
          "Priority": 2,
          "Name": "verified_phone_number"
        }
      ]
    },
    "UsernameConfiguration": {
      "CaseSensitive": false
    },
    "VerificationMessageTemplate": {
      "DefaultEmailOption": "CONFIRM_WITH_CODE"
    },
    "UserAttributeUpdateSettings": {
      "AttributesRequireVerificationBeforeUpdate": ["email", "phone_number"]
    },
    "CreationDate": "2024-01-15T10:30:00.000Z",
    "LastModifiedDate": "2024-12-01T15:45:00.000Z",
    "Status": "Active"
  },
  "UserPoolMfaConfig": {
    "SmsMfaConfiguration": {
      "SmsAuthenticationMessage": "Your authentication code is {####}",
      "SmsConfiguration": {
        "SnsCallerArn": "arn:aws:iam::123456789012:role/cognito-sms-role",
        "ExternalId": "sms-external-id"
      }
    },
    "SoftwareTokenMfaConfiguration": {
      "Enabled": true
    },
    "MfaConfiguration": "ON"
  },
  "RiskConfiguration": {
    "UserPoolId": "us-west-2_COMPLIANT001",
    "CompromisedCredentialsRiskConfiguration": {
      "Actions": {
        "EventAction": "BLOCK"
      },
      "EventFilter": ["SIGN_IN", "SIGN_UP", "PASSWORD_CHANGE"]
    },
    "AccountTakeoverRiskConfiguration": {
      "NotifyConfiguration": {
        "From": "security@company.com",
        "ReplyTo": "security@company.com",
        "SourceArn": "arn:aws:ses:us-west-2:123456789012:identity/security@company.com",
        "BlockEmail": {
          "Subject": "Account Security Alert - Action Blocked",
          "TextBody": "A suspicious action was blocked on your account."
        },
        "NoActionEmail": {
          "Subject": "Account Activity Notice",
          "TextBody": "We noticed unusual activity on your account."
        },
        "MfaEmail": {
          "Subject": "Additional Verification Required",
          "TextBody": "Please verify your identity with MFA."
        }
      },
      "Actions": {
        "LowAction": {
          "Notify": true,
          "EventAction": "NO_ACTION"
        },
        "MediumAction": {
          "Notify": true,
          "EventAction": "MFA_REQUIRED"
        },
        "HighAction": {
          "Notify": true,
          "EventAction": "BLOCK"
        }
      }
    }
  }
}
