# === REQUIRED ===
DATABASE_URL=postgresql://user:pass@localhost:5432/corsair
KEY_ENCRYPTION_SECRET=  # 64 hex chars. Generate: bun -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ANTHROPIC_API_KEY=sk-ant-api03-...

# === RECOMMENDED ===
CORSAIR_API_KEYS=cpoe_live_xxx,cpoe_live_yyy  # Comma-separated API keys for protected endpoints
CORSAIR_DOMAIN=grcorsair.com

# === OPTIONAL ===
PORT=3000
CORSAIR_ALLOWED_ORIGINS=https://grcorsair.com  # Comma-separated origins for CORS on protected endpoints
ENABLE_DELIVERY_WORKER=false  # Enable SSF delivery worker (setInterval-based)
DELIVERY_WORKER_INTERVAL=30000  # Delivery worker interval in ms (default: 30s)
CORSAIR_OIDC_CONFIG={"providers":[{"issuer":"https://accounts.google.com","audiences":["corsair-sign"],"requireJti":true,"claimMapping":{"subject":"sub","email":"email","organization":"hd"}}]}  # OIDC issuer config (JSON)
