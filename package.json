{
  "name": "corsair",
  "version": "0.3.0",
  "description": "CORSAIR - CPOE ingestion and trust exchange platform",
  "type": "module",
  "packageManager": "bun@1.3.8",
  "workspaces": ["apps/*"],
  "main": "src/ingestion/index.ts",
  "bin": {
    "corsair": "./corsair.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test:all": "turbo run test",
    "test": "bun test",
    "test:parley": "bun test tests/parley/",
    "test:flagship": "bun test tests/flagship/",
    "test:ingestion": "bun test tests/ingestion/",
    "test:quartermaster": "bun test tests/quartermaster/",
    "test:db": "bun test tests/db/",
    "test:chart": "bun test tests/chart/",
    "test:e2e": "bun test tests/integration/",
    "test:output": "bun test tests/output/",
    "test:data": "bun test tests/data/",
    "test:functions": "bun test tests/functions/",
    "ingest": "bun run corsair.ts ingest",
    "verify": "bun run corsair.ts verify",
    "serve": "bun run corsair.ts serve"
  },
  "keywords": [
    "compliance",
    "verifiable-credentials",
    "cpoe",
    "grc",
    "soc2",
    "jwt-vc",
    "scitt",
    "ed25519",
    "trust"
  ],
  "author": "GRC Engineer",
  "license": "MIT",
  "devDependencies": {
    "bun-types": "latest",
    "turbo": "^2.8.3"
  },
  "exports": {
    ".": "./src/ingestion/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "jose": "^6.1.3"
  }
}
