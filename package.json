{
  "name": "corsair",
  "version": "0.5.0",
  "description": "CORSAIR - CPOE ingestion and trust exchange platform",
  "type": "module",
  "packageManager": "bun@1.3.8",
  "workspaces": ["apps/*", "packages/*"],
  "main": "src/ingestion/index.ts",
  "bin": {
    "corsair": "./corsair.ts"
  },
  "scripts": {
    "build:web": "bun run --filter '@corsair/web' build",
    "dev:web": "bun run --filter '@corsair/web' dev",
    "lint:web": "bun run --filter '@corsair/web' lint",
    "test": "bun test",
    "test:parley": "bun test tests/parley/",
    "test:flagship": "bun test tests/flagship/",
    "test:ingestion": "bun test tests/ingestion/",
    "test:quartermaster": "bun test tests/quartermaster/",
    "test:db": "bun test tests/db/",
    "test:chart": "bun test tests/chart/",
    "test:e2e": "bun test tests/integration/",
    "test:output": "bun test tests/output/",
    "test:data": "bun test tests/data/",
    "test:functions": "bun test tests/functions/",
    "ingest": "bun run corsair.ts ingest",
    "verify": "bun run corsair.ts verify",
    "serve": "bun run corsair.ts serve"
  },
  "keywords": [
    "compliance",
    "verifiable-credentials",
    "cpoe",
    "grc",
    "soc2",
    "jwt-vc",
    "scitt",
    "ed25519",
    "trust"
  ],
  "author": "GRC Engineer",
  "license": "Apache-2.0",
  "files": [
    "corsair.ts",
    "src",
    "bin",
    "examples",
    "CPOE_SPEC.md",
    "LICENSE",
    "NOTICE"
  ],
  "engines": {
    "bun": ">= 1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arudjreis/corsair.git"
  },
  "homepage": "https://grcorsair.com",
  "bugs": {
    "url": "https://github.com/Arudjreis/corsair/issues"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "bun-types": "latest"
  },
  "exports": {
    ".": "./src/ingestion/index.ts"
  },
  "dependencies": {
    "jose": "^6.1.3"
  }
}
