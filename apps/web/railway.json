{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "apps/web/**",
      "package.json",
      "bun.lock"
    ],
    "buildCommand": "bun install --frozen-lockfile && bun run build"
  },
  "deploy": {
    "startCommand": "bun run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
